{
  "compilerOptions": {
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@animelist/core/*": ["packages/animelist-core/src/*"],
      "@animelist/core": ["packages/animelist-core/src"],
      "@animelist/client/*": ["packages/animelist-client/src/*"],
      "@animelist/client": ["packages/animelist-client/src"],
      "@animelist/auth/*": ["packages/animelist-auth/src/*"],
      "@animelist/auth": ["packages/animelist-auth/src"],
      "@animelist/auth-sveltekit/*": ["packages/animelist-auth-sveltekit/src/*"],
      "@animelist/auth-sveltekit": ["packages/animelist-auth-sveltekit/src"]
    }
  },
  "exclude": [
    "**/**/*.test.ts",
    "**/**/*.spec.ts",
  ]
}