{
  "compilerOptions": {
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@mal/core/*": [
        "packages/core/src/*",
      ],
      "@mal/core": [
        "packages/core/src",
      ],
      //
      "@mal/client/*": [
        "packages/mal-client/src/*",
      ],
      "@mal/client": [
        "packages/mal-client/src",
      ],
      //
      "@mal/auth/*": [
        "packages/mal-auth/src/*",
      ],
      "@mal/auth": [
        "packages/mal-auth/src",
      ],
      //
      "@mal/auth-sveltekit/*": [
        "packages/mal-auth-sveltekit/src/*",
      ],
      "@mal/auth-sveltekit": [
        "packages/mal-auth-sveltekit/src",
      ]
    }
  },
  "exclude": [
    "**/**/*.test.ts",
    "**/**/*.spec.ts",
  ]
}