{
  "name": "@animelist/core",
  "version": "0.0.1-alpha.3",
  "description": "Common functionality of @animelist",
  "license": "MIT",
  "author": "Freddy L. Paredes",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src",
    "build:types": "tsc --emitDeclarationOnly",
    "build:lib": "tsx esbuild.mts",
    "build": "rimraf dist && pnpm build:types && pnpm build:lib",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "esbuild": "^0.19.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "eslint": "^8.49.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.MD",
    "!**/*.test.*"
  ]
}