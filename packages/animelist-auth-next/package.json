{
  "name": "@animelist/auth-next",
  "version": "0.0.1-alpha.8",
  "description": "Integration with the @animelist/auth for NextJS",
  "author": "Freddy L.",
  "main": "index.js",
  "module": "index.mjs",
  "typings": "index.d.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src",
    "clean:lib": "rimraf dist && rimraf server client && rimraf index.js index.js.map index.mjs index.mjs.map index.d.ts index.d.ts.map",
    "build:types": "tsc --emitDeclarationOnly",
    "build:lib": "tsx esbuild.mts",
    "build": "pnpm clean:lib && pnpm build:types && pnpm build:lib && npx ncp dist .",
    "prepublishOnly": "pnpm build",
    "rollup": "pnpm clean:lib && pnpm build:types && rollup --config rollup.config.ts --configPlugin rollup-plugin-swc3 && npx ncp dist ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neo-Ciber94/animelist.git",
    "directory": "packages/animelist-auth-next"
  },
  "keywords": [
    "anime",
    "myanimelist",
    "nextjs",
    "react",
    "authorization",
    "oauth2",
    "node",
    "typescript"
  ],
  "license": "ISC",
  "dependencies": {
    "@animelist/auth": "workspace:*",
    "@animelist/client": "workspace:*",
    "@animelist/core": "workspace:*",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.22",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "ncp": "^2.0.0",
    "next": "^13.5.2",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "./package.json": "./package.json",
  "./server": {
    "import": "./server/index.mjs",
    "require": "./server/index.js",
    "default": "./server/index.js"
  },
  "./client": {
    "import": "./client/index.mjs",
    "require": "./client/index.js",
    "default": "./client/index.js"
  },
  "files": [
    "src",
    "client",
    "server",
    "*.js",
    "*.js.map",
    "*.mjs",
    "*.mjs.map",
    "*.d.ts",
    "*.d.ts.map",
    "package.json",
    "README.MD",
    "!**/*.test.*"
  ]
}
